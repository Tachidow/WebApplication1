@model WebApplication1.Models.ListOfForms

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a  class="btn-primary btn" asp-action="Create">Create New</a>
   @* <button class="btn-primary btn" type="button" id="test123">Create</button>*@
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Email
            </th>
            <th>
                Phone
            </th>
            <th>
                BirthDay
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.FormList) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.TrIndex">Edit</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.TrIndex">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

